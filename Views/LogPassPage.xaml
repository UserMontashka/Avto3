<Page x:Class="Avto.Views.LogPassPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Avto.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogPass"> 
    

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Авторизация" HorizontalAlignment="Center" Style="{StaticResource MainLableStyle}" FontSize="15"/>
            <Label Content="Введите логин" HorizontalAlignment="Center" Style="{StaticResource MainLableStyle}"/>
            <TextBox Width="200" BorderThickness="1" BorderBrush="Black" x:Name="LoginTextBox"/>
            <Label Content="Введите пароль" HorizontalAlignment="Center" Style="{StaticResource MainLableStyle}"/>
            <TextBox Width="200"  x:Name="PasswordTextBox" Style="{StaticResource MainStyle}"  />
            <Button x:Name="LogInButton" Content="Войти" Margin="0,15" Click="LogInButton_Click" Style="{StaticResource MainButtonStyle}"/>
        </StackPanel>
       








    </Grid>
</Page>
